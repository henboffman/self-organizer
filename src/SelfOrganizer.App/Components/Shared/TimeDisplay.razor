@code {
    [Parameter] public int Minutes { get; set; }
    [Parameter] public bool ShowLabel { get; set; } = false;
}

<span class="time-display">
    @if (Minutes >= 60)
    {
        var hours = Minutes / 60;
        var mins = Minutes % 60;
        @($"{hours}h")
        @if (mins > 0)
        {
            @($" {mins}m")
        }
    }
    else
    {
        @($"{Minutes}m")
    }
    @if (ShowLabel)
    {
        <span class="text-muted ms-1">est.</span>
    }
</span>

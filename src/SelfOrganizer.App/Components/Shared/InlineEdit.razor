@typeparam TValue

<div class="inline-edit-container @(IsEditing ? "editing" : "")" @ondblclick="StartEditing">
    @if (IsEditing)
    {
        <input type="text"
               class="inline-edit-input"
               @bind="EditValue"
               @bind:event="oninput"
               @ref="_inputRef"
               @onblur="OnBlur"
               @onkeydown="OnKeyDown" />
    }
    else
    {
        <span class="inline-edit-display" title="Double-click to edit">
            @if (DisplayTemplate != null)
            {
                @DisplayTemplate
            }
            else
            {
                @DisplayValue
            }
        </span>
    }
</div>

@code {
    [Parameter] public TValue? Value { get; set; }
    [Parameter] public EventCallback<TValue> ValueChanged { get; set; }
    [Parameter] public EventCallback<TValue> OnSave { get; set; }
    [Parameter] public RenderFragment? DisplayTemplate { get; set; }
    [Parameter] public string? Placeholder { get; set; }
    [Parameter] public bool AllowEmpty { get; set; } = false;
    [Parameter] public string? CssClass { get; set; }

    private bool IsEditing { get; set; }
    private string EditValue { get; set; } = string.Empty;
    private ElementReference _inputRef;

    private string DisplayValue => Value?.ToString() ?? Placeholder ?? "Click to edit";

    protected override void OnParametersSet()
    {
        if (!IsEditing)
        {
            EditValue = Value?.ToString() ?? string.Empty;
        }
    }

    private async Task StartEditing()
    {
        IsEditing = true;
        EditValue = Value?.ToString() ?? string.Empty;
        StateHasChanged();
        await Task.Delay(10); // Allow render
        await _inputRef.FocusAsync();
    }

    private async Task OnBlur()
    {
        await SaveAndClose();
    }

    private async Task OnKeyDown(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            await SaveAndClose();
        }
        else if (e.Key == "Escape")
        {
            CancelEditing();
        }
    }

    private async Task SaveAndClose()
    {
        if (!AllowEmpty && string.IsNullOrWhiteSpace(EditValue))
        {
            CancelEditing();
            return;
        }

        IsEditing = false;

        // Only trigger save if value changed
        var currentValue = Value?.ToString() ?? string.Empty;
        if (EditValue != currentValue)
        {
            // Convert string back to TValue
            if (typeof(TValue) == typeof(string))
            {
                var newValue = (TValue)(object)EditValue;
                await ValueChanged.InvokeAsync(newValue);
                await OnSave.InvokeAsync(newValue);
            }
            else if (typeof(TValue) == typeof(int) && int.TryParse(EditValue, out var intVal))
            {
                var newValue = (TValue)(object)intVal;
                await ValueChanged.InvokeAsync(newValue);
                await OnSave.InvokeAsync(newValue);
            }
        }
    }

    private void CancelEditing()
    {
        IsEditing = false;
        EditValue = Value?.ToString() ?? string.Empty;
    }
}

@using SelfOrganizer.Core.Models

<div class="row g-3 mb-4">
    <div class="col-6 col-xl-3">
        <div class="card h-100">
            <div class="card-body p-3">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <h6 class="card-subtitle mb-2 text-muted small">Active Plans</h6>
                        <h2 class="card-title mb-0">@ActivePlansCount</h2>
                    </div>
                    <span class="oi oi-map fs-4 text-primary opacity-50"></span>
                </div>
            </div>
        </div>
    </div>

    <div class="col-6 col-xl-3">
        <div class="card h-100">
            <div class="card-body p-3">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <h6 class="card-subtitle mb-2 text-muted small">Skills In Progress</h6>
                        <h2 class="card-title mb-0">@SkillsInProgressCount</h2>
                    </div>
                    <span class="oi oi-star fs-4 text-warning opacity-50"></span>
                </div>
            </div>
        </div>
    </div>

    <div class="col-6 col-xl-3">
        <div class="card h-100">
            <div class="card-body p-3">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <h6 class="card-subtitle mb-2 text-muted small">Active Goals</h6>
                        <h2 class="card-title mb-0">@ActiveGoalsCount</h2>
                    </div>
                    <span class="oi oi-target fs-4 text-success opacity-50"></span>
                </div>
            </div>
        </div>
    </div>

    <div class="col-6 col-xl-3">
        <div class="card h-100">
            <div class="card-body p-3">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <h6 class="card-subtitle mb-2 text-muted small">Upcoming Milestones</h6>
                        <h2 class="card-title mb-0">@UpcomingMilestonesCount</h2>
                    </div>
                    <span class="oi oi-flag fs-4 text-info opacity-50"></span>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public int ActivePlansCount { get; set; }
    [Parameter] public int SkillsInProgressCount { get; set; }
    [Parameter] public int ActiveGoalsCount { get; set; }
    [Parameter] public int UpcomingMilestonesCount { get; set; }
}

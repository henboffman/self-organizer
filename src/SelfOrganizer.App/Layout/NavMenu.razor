<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Self Organizer</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="nav flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Dashboard
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="capture">
                <span class="oi oi-bolt" aria-hidden="true"></span> Capture
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="inbox">
                <span class="oi oi-inbox" aria-hidden="true"></span> Inbox
                @if (_inboxCount > 0)
                {
                    <span class="badge bg-accent ms-1">@_inboxCount</span>
                }
            </NavLink>
        </div>

        <hr class="nav-separator" />

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="tasks/next">
                <span class="oi oi-task" aria-hidden="true"></span> Next Actions
                @if (_nextActionsCount > 0)
                {
                    <span class="badge bg-success ms-1">@_nextActionsCount</span>
                }
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="tasks/waiting">
                <span class="oi oi-clock" aria-hidden="true"></span> Waiting For
                @if (_waitingForCount > 0)
                {
                    <span class="badge bg-warning text-dark ms-1">@_waitingForCount</span>
                }
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="tasks/scheduled">
                <span class="oi oi-calendar" aria-hidden="true"></span> Scheduled
                @if (_scheduledCount > 0)
                {
                    <span class="badge bg-info ms-1">@_scheduledCount</span>
                }
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="tasks/someday">
                <span class="oi oi-star" aria-hidden="true"></span> Someday/Maybe
                @if (_somedayCount > 0)
                {
                    <span class="badge bg-secondary ms-1">@_somedayCount</span>
                }
            </NavLink>
        </div>

        <hr class="nav-separator" />

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="projects">
                <span class="oi oi-folder" aria-hidden="true"></span> Projects
                @if (_projectsCount > 0)
                {
                    <span class="badge bg-primary ms-1">@_projectsCount</span>
                }
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="calendar">
                <span class="oi oi-calendar" aria-hidden="true"></span> Calendar
                @if (_todayEventsCount > 0)
                {
                    <span class="badge bg-info ms-1">@_todayEventsCount</span>
                }
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="schedule">
                <span class="oi oi-spreadsheet" aria-hidden="true"></span> Schedule
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="focus">
                <span class="oi oi-clock" aria-hidden="true"></span> Focus Timer
            </NavLink>
        </div>

        <hr class="nav-separator" />

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="review/daily">
                <span class="oi oi-check" aria-hidden="true"></span> Daily Review
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="review/weekly">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Weekly Review
            </NavLink>
        </div>

        <hr class="nav-separator" />

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="reference">
                <span class="oi oi-book" aria-hidden="true"></span> Reference
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="reports">
                <span class="oi oi-graph" aria-hidden="true"></span> Reports
            </NavLink>
        </div>
    </nav>
</div>

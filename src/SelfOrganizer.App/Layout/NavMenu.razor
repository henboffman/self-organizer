<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Self Organizer</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="nav flex-column">
        @* Primary GTD Flow *@
        <div class="nav-section-label px-3 pt-2 text-uppercase small text-muted">Capture</div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="capture">
                <span class="oi oi-bolt" aria-hidden="true"></span> Quick Capture
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="inbox">
                <span class="oi oi-inbox" aria-hidden="true"></span> Inbox
                @if (_inboxCount > 0)
                {
                    <span class="badge bg-accent ms-1">@_inboxCount</span>
                }
            </NavLink>
        </div>

        @* Work Management *@
        <div class="nav-section-label px-3 pt-3 text-uppercase small text-muted">Work</div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="tasks">
                <span class="oi oi-task" aria-hidden="true"></span> Tasks
                @if (_totalTasksCount > 0)
                {
                    <span class="badge bg-success ms-1">@_totalTasksCount</span>
                }
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="projects">
                <span class="oi oi-folder" aria-hidden="true"></span> Projects
                @if (_projectsCount > 0)
                {
                    <span class="badge bg-primary ms-1">@_projectsCount</span>
                }
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="calendar">
                <span class="oi oi-calendar" aria-hidden="true"></span> Calendar
                @if (_todayEventsCount > 0)
                {
                    <span class="badge bg-info ms-1">@_todayEventsCount today</span>
                }
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="goals">
                <span class="bi bi-bullseye me-2" aria-hidden="true"></span> Goals
                @if (_goalsCount > 0)
                {
                    <span class="badge bg-secondary ms-1">@_goalsCount</span>
                }
            </NavLink>
        </div>

        @* Organization *@
        <div class="nav-section-label px-3 pt-3 text-uppercase small text-muted">Organize</div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="workspaces">
                <span class="oi oi-layers" aria-hidden="true"></span> Workspaces
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="tags">
                <span class="oi oi-tags" aria-hidden="true"></span> Tags & Entities
            </NavLink>
        </div>

        @* Review & Reflect *@
        <div class="nav-section-label px-3 pt-3 text-uppercase small text-muted">Review</div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="review/daily">
                <span class="oi oi-check" aria-hidden="true"></span> Daily Review
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="review/weekly">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Weekly Review
            </NavLink>
        </div>

        @* Other *@
        <div class="nav-section-label px-3 pt-3 text-uppercase small text-muted">More</div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="focus">
                <span class="oi oi-target" aria-hidden="true"></span> Focus Timer
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="reference">
                <span class="oi oi-book" aria-hidden="true"></span> Reference
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="reports">
                <span class="oi oi-graph" aria-hidden="true"></span> Reports
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="summarize">
                <span class="oi oi-document" aria-hidden="true"></span> Summarize
            </NavLink>
        </div>
    </nav>
</div>

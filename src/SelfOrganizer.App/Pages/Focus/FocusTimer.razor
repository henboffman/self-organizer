@page "/focus"
@page "/focus/{TaskId:guid}"
@using SelfOrganizer.Core.Models
@using SelfOrganizer.App.Services
@using SelfOrganizer.App.Components.Shared
@inject IFocusTimerState FocusTimerService
@inject SelfOrganizer.Core.Interfaces.ITaskService TaskService
@inject SelfOrganizer.Core.Interfaces.IRepository<UserPreferences> PreferencesRepository
@inject IDataChangeNotificationService DataChangeNotification
@inject IJSRuntime JS
@inject NavigationManager Navigation
@inject SelfOrganizer.Core.Interfaces.IRepository<FocusSessionLog> FocusSessionRepository
@implements IDisposable

<div class="focus-container">
    @if (_state.TaskTitle == null)
    {
        <div class="text-center py-4">
            <h2 class="mb-2">
                <span class="oi oi-clock me-2"></span>Focus Timer
            </h2>
            <p class="text-muted mb-4">Select a task to focus on, or start a free focus session.</p>

            @* Task Search/Selection *@
            <div class="task-selection-panel mb-4">
                @* Search input *@
                <div class="search-box mb-3">
                    <div class="input-group">
                        <span class="input-group-text bg-transparent border-end-0">
                            <span class="oi oi-magnifying-glass text-muted"></span>
                        </span>
                        <input type="text"
                               class="form-control border-start-0"
                               placeholder="Search tasks or create new..."
                               @bind="_searchQuery"
                               @bind:event="oninput"
                               @onkeydown="HandleSearchKeydown" />
                        @if (!string.IsNullOrEmpty(_searchQuery))
                        {
                            <button class="btn btn-outline-secondary" @onclick="ClearSearch">
                                <span class="oi oi-x"></span>
                            </button>
                        }
                    </div>
                </div>

                @* Quick create option *@
                @if (!string.IsNullOrWhiteSpace(_searchQuery) && !_filteredTasks.Any(t => t.Title.Equals(_searchQuery, StringComparison.OrdinalIgnoreCase)))
                {
                    <button class="btn btn-outline-success w-100 mb-3 text-start" @onclick="CreateAndSelectTask">
                        <span class="oi oi-plus me-2"></span>
                        Create task: "<strong>@_searchQuery</strong>"
                    </button>
                }

                @* Filter tabs *@
                <div class="btn-group w-100 mb-3" role="group">
                    <button class="btn btn-sm @(_taskFilter == "suggested" ? "btn-primary" : "btn-outline-secondary")"
                            @onclick='() => SetTaskFilter("suggested")'>
                        <span class="oi oi-star me-1"></span>Suggested
                    </button>
                    <button class="btn btn-sm @(_taskFilter == "all" ? "btn-primary" : "btn-outline-secondary")"
                            @onclick='() => SetTaskFilter("all")'>
                        <span class="oi oi-list me-1"></span>All Tasks
                    </button>
                    <button class="btn btn-sm @(_taskFilter == "scheduled" ? "btn-primary" : "btn-outline-secondary")"
                            @onclick='() => SetTaskFilter("scheduled")'>
                        <span class="oi oi-calendar me-1"></span>Today
                    </button>
                </div>

                @* Task list *@
                <div class="task-list">
                    @if (_filteredTasks.Any())
                    {
                        <div class="list-group">
                            @foreach (var task in _filteredTasks.Take(_showAllTasks ? 50 : 8))
                            {
                                <button class="list-group-item list-group-item-action @(_selectedPreviewTask?.Id == task.Id ? "active" : "")"
                                        @onclick="() => SelectTask(task)">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div class="task-info">
                                            <div class="task-title">
                                                <PriorityIndicator Priority="@task.Priority" />
                                                <span class="ms-2">@task.Title</span>
                                            </div>
                                            @if (task.ProjectId.HasValue || task.Contexts.Any())
                                            {
                                                <div class="task-meta small text-muted mt-1">
                                                    @foreach (var ctx in task.Contexts.Take(2))
                                                    {
                                                        <span class="badge bg-secondary bg-opacity-25 text-secondary me-1">@ctx</span>
                                                    }
                                                </div>
                                            }
                                        </div>
                                        <div class="task-badges">
                                            @if (task.EstimatedMinutes > 0)
                                            {
                                                <span class="badge bg-primary bg-opacity-10 text-primary">@task.EstimatedMinutes min</span>
                                            }
                                            @if (task.EnergyLevel.HasValue)
                                            {
                                                <span class="badge bg-warning bg-opacity-10 text-warning ms-1" title="Energy level">
                                                    @(new string('âš¡', task.EnergyLevel.Value > 3 ? 3 : task.EnergyLevel.Value))
                                                </span>
                                            }
                                        </div>
                                    </div>
                                </button>
                            }
                        </div>

                        @if (_filteredTasks.Count > 8 && !_showAllTasks)
                        {
                            <button class="btn btn-link btn-sm w-100 mt-2" @onclick="() => _showAllTasks = true">
                                Show @(_filteredTasks.Count - 8) more tasks...
                            </button>
                        }
                    }
                    else if (!string.IsNullOrWhiteSpace(_searchQuery))
                    {
                        <div class="text-muted text-center py-3">
                            <span class="oi oi-magnifying-glass me-1"></span>
                            No tasks match your search
                        </div>
                    }
                    else
                    {
                        <div class="text-muted text-center py-3">
                            <span class="oi oi-inbox me-1"></span>
                            No tasks available
                        </div>
                    }
                </div>
            </div>

            @* Free focus button *@
            <div class="mt-4 pt-3 border-top">
                <p class="text-muted small mb-2">Or work without a specific task:</p>
                <button class="btn btn-outline-primary" @onclick="StartFreeSession">
                    <span class="oi oi-media-play me-2"></span>Start Free Focus Session
                </button>
            </div>
        </div>
    }
    else
    {
        <div class="text-center">
            @* Current Task *@
            <div class="mb-4">
                <span class="badge @(_state.IsBreak ? "bg-success" : "bg-primary") fs-6 px-3 py-2">
                    @(_state.IsBreak ? "Break Time" : _state.TaskTitle)
                </span>
            </div>

            @* Timer Display *@
            <div class="timer-display mb-4">
                <div class="timer-digits @(_state.IsBreak ? "text-success" : "")">
                    @FormatTime(_state.RemainingSeconds)
                </div>
                <div class="timer-label text-muted">
                    @if (_state.IsBreak)
                    {
                        <span class="text-success">Break Time!</span>
                    }
                    else if (_state.IsRunning)
                    {
                        <span>Focus...</span>
                    }
                    else if (_state.RemainingSeconds == _state.FocusMinutes * 60)
                    {
                        <span>Ready to start</span>
                    }
                    else
                    {
                        <span>Paused</span>
                    }
                </div>
            </div>

            @* Progress Ring *@
            <div class="progress-container mb-4">
                <svg class="progress-ring" viewBox="0 0 120 120">
                    <circle class="progress-ring-bg" cx="60" cy="60" r="54" />
                    <circle class="progress-ring-fill @(_state.IsBreak ? "break" : "")"
                            cx="60" cy="60" r="54"
                            stroke-dasharray="@(2 * Math.PI * 54)"
                            stroke-dashoffset="@GetProgressOffset()" />
                </svg>
            </div>

            @* Controls *@
            <div class="d-flex justify-content-center gap-3 mb-4">
                @if (!_state.IsRunning)
                {
                    <button class="btn btn-success btn-lg" @onclick="StartTimer">
                        <span class="oi oi-media-play me-1"></span> Start
                    </button>
                }
                else
                {
                    <button class="btn btn-warning btn-lg" @onclick="PauseTimer">
                        <span class="oi oi-media-pause me-1"></span> Pause
                    </button>
                }
                <button class="btn btn-outline-secondary btn-lg" @onclick="ResetTimer">
                    <span class="oi oi-reload me-1"></span> Reset
                </button>
                <button class="btn btn-outline-info btn-lg" @onclick="OpenMiniWindow" title="Open mini window">
                    <span class="oi oi-external-link me-1"></span> Mini
                </button>
            </div>

            @* Session Intention *@
            @if (!_state.IsRunning && !_state.IsBreak)
            {
                <div class="intention-section mb-4">
                    <div class="input-group">
                        <span class="input-group-text bg-transparent">
                            <span class="oi oi-target text-primary"></span>
                        </span>
                        <input type="text"
                               class="form-control"
                               placeholder="What's your intention for this session? (optional)"
                               @bind="_sessionIntention" />
                    </div>
                    <div class="form-text text-center mt-1">
                        Setting an intention helps maintain focus
                    </div>
                </div>
            }

            @* Show current intention while running *@
            @if (_state.IsRunning && !string.IsNullOrWhiteSpace(_sessionIntention))
            {
                <div class="current-intention mb-3">
                    <small class="text-muted">Intention:</small>
                    <div class="intention-text">"@_sessionIntention"</div>
                </div>
            }

            @* Session Settings *@
            <div class="mb-4">
                <div class="btn-group" role="group">
                    <button class="btn btn-sm @(_state.FocusMinutes == 15 ? "btn-primary" : "btn-outline-primary")"
                            @onclick="() => SetDuration(15)" disabled="@_state.IsRunning">15 min</button>
                    <button class="btn btn-sm @(_state.FocusMinutes == 25 ? "btn-primary" : "btn-outline-primary")"
                            @onclick="() => SetDuration(25)" disabled="@_state.IsRunning">25 min</button>
                    <button class="btn btn-sm @(_state.FocusMinutes == 45 ? "btn-primary" : "btn-outline-primary")"
                            @onclick="() => SetDuration(45)" disabled="@_state.IsRunning">45 min</button>
                    <button class="btn btn-sm @(_state.FocusMinutes == 60 ? "btn-primary" : "btn-outline-primary")"
                            @onclick="() => SetDuration(60)" disabled="@_state.IsRunning">60 min</button>
                </div>
            </div>

            @* Quick Actions *@
            <div class="d-flex justify-content-center gap-2">
                @if (_state.TaskId.HasValue)
                {
                    <button class="btn btn-outline-success btn-sm" @onclick="CompleteTask">
                        <span class="oi oi-check me-1"></span> Mark Complete
                    </button>
                }
                <button class="btn btn-outline-secondary btn-sm" @onclick="ChangeTask">
                    <span class="oi oi-arrow-left me-1"></span> Change Task
                </button>
            </div>

            @* Sessions completed today *@
            @if (_state.SessionsCompleted > 0)
            {
                <div class="mt-4 text-muted">
                    <small>
                        <span class="oi oi-star me-1"></span>
                        @_state.SessionsCompleted focus session@(_state.SessionsCompleted == 1 ? "" : "s") today
                    </small>
                </div>
            }
        </div>
    }
</div>

<CelebrationEffect @ref="_celebrationEffect" />

@* Session Reflection Modal *@
<SelfOrganizer.App.Components.Shared.Modal Title="Session Complete!" IsVisible="@_showReflectionModal" OnClose="CloseReflection">
    <ChildContent>
        <div class="text-center mb-4">
            <div class="session-complete-icon">
                <span class="oi oi-check"></span>
            </div>
            <h5 class="mt-3">Great work on your focus session!</h5>
            <p class="text-muted">Take a moment to reflect before your break.</p>
        </div>

        @if (!string.IsNullOrWhiteSpace(_sessionIntention))
        {
            <div class="intention-review mb-4">
                <label class="form-label text-muted">Your intention was:</label>
                <div class="intention-quote">"@_sessionIntention"</div>
            </div>
        }

        <div class="mb-4">
            <label class="form-label">How focused were you?</label>
            <div class="focus-rating d-flex justify-content-center gap-2">
                @for (int i = 1; i <= 5; i++)
                {
                    var rating = i;
                    <button class="btn btn-lg @(_focusRating == rating ? "btn-primary" : "btn-outline-secondary")"
                            @onclick="() => _focusRating = rating">
                        @rating
                    </button>
                }
            </div>
            <div class="d-flex justify-content-between small text-muted mt-1 px-2">
                <span>Distracted</span>
                <span>Deeply Focused</span>
            </div>
        </div>

        <div class="mb-4">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" @bind="_wasDistracted" id="wasDistracted" />
                <label class="form-check-label" for="wasDistracted">
                    I was interrupted or distracted during this session
                </label>
            </div>
        </div>

        <div class="mb-3">
            <label class="form-label">Quick notes (optional)</label>
            <textarea class="form-control"
                      rows="2"
                      placeholder="What went well? What could be better?"
                      @bind="_reflectionNotes"></textarea>
        </div>
    </ChildContent>
    <Footer>
        <button class="btn btn-secondary" @onclick="SkipReflection">Skip</button>
        <button class="btn btn-primary" @onclick="SaveReflection">
            <span class="oi oi-check me-1"></span>Save & Start Break
        </button>
    </Footer>
</SelfOrganizer.App.Components.Shared.Modal>

@code {
    [Parameter] public Guid? TaskId { get; set; }

    private FocusTimerStateData _state = new();
    private List<TodoTask> _allTasks = new();
    private List<TodoTask> _nextActionTasks = new();
    private List<TodoTask> _scheduledTasks = new();
    private List<TodoTask> _filteredTasks = new();
    private CelebrationEffect? _celebrationEffect;
    private bool _enableCelebrations = true;

    private string _searchQuery = string.Empty;
    private string _taskFilter = "suggested";
    private bool _showAllTasks = false;
    private TodoTask? _selectedPreviewTask;

    // Session intention/reflection
    private string _sessionIntention = string.Empty;
    private bool _showReflectionModal = false;
    private int _focusRating = 3;
    private string _reflectionNotes = string.Empty;
    private bool _wasDistracted = false;
    private int _lastSessionsCompleted = 0;
    private DateTime _sessionStartTime = DateTime.UtcNow;

    protected override async Task OnInitializedAsync()
    {
        await FocusTimerService.InitializeAsync();
        _state = FocusTimerService.State;
        FocusTimerService.OnStateChanged += OnTimerStateChanged;

        await LoadTasks();

        var prefs = (await PreferencesRepository.GetAllAsync()).FirstOrDefault();
        if (prefs != null)
        {
            _enableCelebrations = prefs.EnableCelebrationEffects;
        }

        // If a task ID was passed via route parameter, start focus on that task
        if (TaskId.HasValue)
        {
            var task = _allTasks.FirstOrDefault(t => t.Id == TaskId.Value);
            if (task != null)
            {
                await FocusTimerService.StartFocusAsync(task);
            }
        }

        ApplyFilter();
    }

    private async Task LoadTasks()
    {
        _allTasks = (await TaskService.GetAllAsync())
            .Where(t => t.Status != TodoTaskStatus.Completed &&
                       t.Status != TodoTaskStatus.Deleted &&
                       t.Status != TodoTaskStatus.SomedayMaybe)
            .OrderByDescending(t => t.Priority == 1)
            .ThenByDescending(t => t.Priority == 2)
            .ThenBy(t => t.DueDate)
            .ToList();

        _nextActionTasks = (await TaskService.GetNextActionsAsync()).ToList();

        var today = DateTime.Today;
        _scheduledTasks = _allTasks
            .Where(t => t.ScheduledDate?.Date == today || t.DueDate?.Date == today)
            .ToList();
    }

    private void ApplyFilter()
    {
        var tasks = _taskFilter switch
        {
            "all" => _allTasks,
            "scheduled" => _scheduledTasks,
            _ => _nextActionTasks
        };

        if (!string.IsNullOrWhiteSpace(_searchQuery))
        {
            var query = _searchQuery.ToLowerInvariant();
            tasks = tasks.Where(t =>
                t.Title.ToLowerInvariant().Contains(query) ||
                (t.Description?.ToLowerInvariant().Contains(query) ?? false) ||
                t.Contexts.Any(c => c.ToLowerInvariant().Contains(query)) ||
                (t.Category?.ToLowerInvariant().Contains(query) ?? false)
            ).ToList();
        }

        _filteredTasks = tasks;
        _showAllTasks = false;
    }

    private void SetTaskFilter(string filter)
    {
        _taskFilter = filter;
        ApplyFilter();
    }

    private void ClearSearch()
    {
        _searchQuery = string.Empty;
        ApplyFilter();
    }

    private void HandleSearchKeydown(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            if (_filteredTasks.Any())
            {
                _ = SelectTask(_filteredTasks.First());
            }
            else if (!string.IsNullOrWhiteSpace(_searchQuery))
            {
                _ = CreateAndSelectTask();
            }
        }
        else
        {
            // Debounce search
            ApplyFilter();
        }
    }

    private async Task CreateAndSelectTask()
    {
        if (string.IsNullOrWhiteSpace(_searchQuery)) return;

        var newTask = new TodoTask
        {
            Title = _searchQuery.Trim(),
            Status = TodoTaskStatus.NextAction,
            Priority = 2,
            CreatedAt = DateTime.UtcNow,
            ModifiedAt = DateTime.UtcNow
        };

        var created = await TaskService.CreateAsync(newTask);
        await LoadTasks();
        ApplyFilter();
        DataChangeNotification.NotifyDataChanged();

        await FocusTimerService.StartFocusAsync(created);
        _searchQuery = string.Empty;
    }

    private void OnTimerStateChanged()
    {
        var previousState = _state;
        _state = FocusTimerService.State;

        // Detect session completion (transition to break)
        if (_state.SessionsCompleted > _lastSessionsCompleted && _state.IsBreak)
        {
            _lastSessionsCompleted = _state.SessionsCompleted;
            // Show reflection modal after a brief delay
            _ = ShowReflectionWithDelay();
        }

        InvokeAsync(StateHasChanged);
    }

    private async Task ShowReflectionWithDelay()
    {
        await Task.Delay(500); // Brief delay for notification
        _showReflectionModal = true;
        _focusRating = 3;
        _reflectionNotes = string.Empty;
        _wasDistracted = false;
        await InvokeAsync(StateHasChanged);
    }

    private async Task SelectTask(TodoTask task)
    {
        _selectedPreviewTask = task;
        await FocusTimerService.StartFocusAsync(task);
    }

    private async Task StartFreeSession()
    {
        await FocusTimerService.StartFreeFocusAsync();
    }

    private async Task SetDuration(int minutes)
    {
        await FocusTimerService.SetDurationAsync(minutes);
    }

    private async Task StartTimer()
    {
        _sessionStartTime = DateTime.UtcNow;
        await FocusTimerService.PlayAsync();
    }

    private async Task PauseTimer()
    {
        await FocusTimerService.PauseAsync();
    }

    private async Task ResetTimer()
    {
        await FocusTimerService.ResetAsync();
    }

    private async Task OpenMiniWindow()
    {
        await FocusTimerService.OpenMiniWindowAsync();
    }

    private async Task CompleteTask()
    {
        if (_state.TaskId.HasValue)
        {
            var task = _allTasks.FirstOrDefault(t => t.Id == _state.TaskId);
            if (task != null)
            {
                if (task.IsRecurring)
                {
                    await TaskService.CompleteRecurringTaskAsync(task.Id);
                }
                else
                {
                    await TaskService.CompleteAsync(task.Id);
                }

                if (_enableCelebrations && _celebrationEffect != null)
                {
                    _ = _celebrationEffect.ShowAsync($"Completed: {task.Title}");
                }

                DataChangeNotification.NotifyDataChanged();
                await LoadTasks();
                ApplyFilter();
            }
            await FocusTimerService.ClearFocusAsync();
        }
    }

    private async Task ChangeTask()
    {
        await FocusTimerService.ClearFocusAsync();
    }

    private static string FormatTime(int totalSeconds)
    {
        var minutes = totalSeconds / 60;
        var seconds = totalSeconds % 60;
        return $"{minutes:D2}:{seconds:D2}";
    }

    private double GetProgressOffset()
    {
        var circumference = 2 * Math.PI * 54;
        var progress = _state.TotalSeconds > 0
            ? (double)_state.RemainingSeconds / _state.TotalSeconds
            : 1;
        return circumference * (1 - progress);
    }

    private void CloseReflection()
    {
        _showReflectionModal = false;
        _sessionIntention = string.Empty;
    }

    private void SkipReflection()
    {
        _showReflectionModal = false;
        _sessionIntention = string.Empty;
    }

    private async Task SaveReflection()
    {
        // Save focus session log
        var sessionLog = new FocusSessionLog
        {
            TaskId = _state.TaskId,
            TaskTitle = _state.TaskTitle ?? "Free Focus",
            DurationMinutes = _state.FocusMinutes,
            StartedAt = _sessionStartTime,
            EndedAt = DateTime.UtcNow,
            Intention = string.IsNullOrWhiteSpace(_sessionIntention) ? null : _sessionIntention,
            FocusRating = _focusRating,
            WasDistracted = _wasDistracted,
            Notes = string.IsNullOrWhiteSpace(_reflectionNotes) ? null : _reflectionNotes,
            TaskCompleted = false // Will be set to true if task was completed during session
        };

        // Try to get the task's project if linked
        if (_state.TaskId.HasValue)
        {
            var task = _allTasks.FirstOrDefault(t => t.Id == _state.TaskId);
            if (task != null)
            {
                sessionLog.ProjectId = task.ProjectId;
                sessionLog.Context = task.Category;
                sessionLog.EnergyLevel = task.EnergyLevel;
            }
        }

        await FocusSessionRepository.AddAsync(sessionLog);

        _showReflectionModal = false;
        _sessionIntention = string.Empty;

        // Show celebration for completing reflection
        if (_enableCelebrations && _celebrationEffect != null)
        {
            _ = _celebrationEffect.ShowAsync("Session complete! Time for a break.");
        }
    }

    public void Dispose()
    {
        FocusTimerService.OnStateChanged -= OnTimerStateChanged;
    }
}

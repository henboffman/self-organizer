@page "/focus"
@page "/focus/{TaskId:guid}"
@using SelfOrganizer.Core.Models
@using SelfOrganizer.App.Services
@using SelfOrganizer.App.Components.Shared
@inject IFocusTimerState FocusTimerService
@inject SelfOrganizer.Core.Interfaces.ITaskService TaskService
@inject SelfOrganizer.Core.Interfaces.IRepository<UserPreferences> PreferencesRepository
@inject SelfOrganizer.Core.Interfaces.IRepository<Project> ProjectRepository
@inject IDataChangeNotificationService DataChangeNotification
@inject IJSRuntime JS
@inject NavigationManager Navigation
@inject SelfOrganizer.Core.Interfaces.IRepository<FocusSessionLog> FocusSessionRepository
@implements IDisposable

<div class="focus-page">
    @if (_state.TaskTitle == null)
    {
        <div class="focus-selection-layout">
            <div class="focus-header">
                <h2 class="mb-1">
                    <span class="oi oi-clock me-2"></span>Focus Timer
                </h2>
                <p class="text-muted mb-0">Select a task to focus on, or start a free session.</p>
            </div>

            <div class="focus-content">
                @* Left side: Task selection *@
                <div class="task-selection-area">
                    @* Search input *@
                    <div class="search-box mb-3">
                        <div class="input-group">
                            <span class="input-group-text">
                                <span class="oi oi-magnifying-glass"></span>
                            </span>
                            <input type="text"
                                   class="form-control"
                                   placeholder="Search tasks or create new..."
                                   @bind="_searchQuery"
                                   @bind:event="oninput"
                                   @onkeydown="HandleSearchKeydown" />
                            @if (!string.IsNullOrEmpty(_searchQuery))
                            {
                                <button class="btn btn-outline-secondary" @onclick="ClearSearch">
                                    <span class="oi oi-x"></span>
                                </button>
                            }
                        </div>
                    </div>

                    @* Quick create option *@
                    @if (!string.IsNullOrWhiteSpace(_searchQuery) && !_filteredTasks.Any(t => t.Title.Equals(_searchQuery, StringComparison.OrdinalIgnoreCase)))
                    {
                        <button class="btn btn-outline-success w-100 mb-3 text-start" @onclick="CreateAndSelectTask">
                            <span class="oi oi-plus me-2"></span>
                            Create task: "<strong>@_searchQuery</strong>"
                        </button>
                    }

                    @* Filter tabs *@
                    <div class="filter-row mb-3">
                        <div class="btn-group" role="group">
                            <button class="btn btn-sm @(_taskFilter == "suggested" ? "btn-primary" : "btn-outline-secondary")"
                                    @onclick='() => SetTaskFilter("suggested")'>
                                <span class="oi oi-star me-1"></span>Suggested
                            </button>
                            <button class="btn btn-sm @(_taskFilter == "all" ? "btn-primary" : "btn-outline-secondary")"
                                    @onclick='() => SetTaskFilter("all")'>
                                <span class="oi oi-list me-1"></span>All
                            </button>
                            <button class="btn btn-sm @(_taskFilter == "scheduled" ? "btn-primary" : "btn-outline-secondary")"
                                    @onclick='() => SetTaskFilter("scheduled")'>
                                <span class="oi oi-calendar me-1"></span>Today
                            </button>
                        </div>

                        @* Project filter *@
                        <select class="form-select form-select-sm filter-select" @bind="_selectedProjectId" @bind:after="ApplyFilter">
                            <option value="">All Projects</option>
                            @foreach (var project in _projects)
                            {
                                <option value="@project.Id">@project.Name</option>
                            }
                        </select>
                    </div>

                    @* Task list *@
                    <div class="task-list">
                        @if (_filteredTasks.Any())
                        {
                            <div class="task-cards">
                                @foreach (var task in _filteredTasks.Take(_showAllTasks ? 50 : 12))
                                {
                                    var project = task.ProjectId.HasValue ? _projectLookup.GetValueOrDefault(task.ProjectId.Value) : null;
                                    <div class="task-card @(_selectedPreviewTask?.Id == task.Id ? "selected" : "")"
                                         @onclick="() => SelectTask(task)">
                                        <div class="task-card-header">
                                            <PriorityIndicator Priority="@task.Priority" />
                                            <span class="task-card-title">@task.Title</span>
                                        </div>

                                        @if (!string.IsNullOrWhiteSpace(task.Description))
                                        {
                                            <div class="task-card-description">@TruncateText(task.Description, 80)</div>
                                        }

                                        <div class="task-card-meta">
                                            @if (project != null)
                                            {
                                                <span class="meta-item" title="Project">
                                                    <span class="oi oi-folder"></span>
                                                    @project.Name
                                                </span>
                                            }
                                            @if (task.DueDate.HasValue)
                                            {
                                                var isOverdue = task.DueDate.Value.Date < DateTime.Today;
                                                var isDueToday = task.DueDate.Value.Date == DateTime.Today;
                                                <span class="meta-item @(isOverdue ? "text-danger" : isDueToday ? "text-warning" : "")" title="Due date">
                                                    <span class="oi oi-calendar"></span>
                                                    @(isDueToday ? "Today" : task.DueDate.Value.ToString("MMM d"))
                                                </span>
                                            }
                                            @if (task.EstimatedMinutes > 0)
                                            {
                                                <span class="meta-item" title="Estimated time">
                                                    <span class="oi oi-clock"></span>
                                                    @task.EstimatedMinutes min
                                                </span>
                                            }
                                            @if (task.EnergyLevel.HasValue)
                                            {
                                                <span class="meta-item" title="Energy level @task.EnergyLevel">
                                                    @(new string('âš¡', Math.Min(task.EnergyLevel.Value, 3)))
                                                </span>
                                            }
                                        </div>

                                        @if (task.Contexts.Any())
                                        {
                                            <div class="task-card-contexts">
                                                @foreach (var ctx in task.Contexts.Take(3))
                                                {
                                                    <span class="context-badge">@@@ctx</span>
                                                }
                                            </div>
                                        }

                                        <div class="task-card-actions mt-2">
                                            <button class="btn btn-sm btn-primary" @onclick="() => SelectTask(task)" @onclick:stopPropagation="true">
                                                <span class="oi oi-media-play me-1"></span>Focus Now
                                            </button>
                                            @if (!_state.TaskQueue.Any(q => q.TaskId == task.Id))
                                            {
                                                <button class="btn btn-sm btn-outline-secondary" @onclick="() => AddToQueue(task)" @onclick:stopPropagation="true">
                                                    <span class="oi oi-plus me-1"></span>Queue
                                                </button>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">In Queue</span>
                                            }
                                        </div>
                                    </div>
                                }
                            </div>

                            @if (_filteredTasks.Count > 12 && !_showAllTasks)
                            {
                                <button class="btn btn-link btn-sm w-100 mt-2" @onclick="() => _showAllTasks = true">
                                    Show @(_filteredTasks.Count - 12) more tasks...
                                </button>
                            }
                        }
                        else if (!string.IsNullOrWhiteSpace(_searchQuery))
                        {
                            <div class="empty-state">
                                <span class="oi oi-magnifying-glass"></span>
                                <p>No tasks match your search</p>
                            </div>
                        }
                        else
                        {
                            <div class="empty-state">
                                <span class="oi oi-inbox"></span>
                                <p>No tasks available</p>
                            </div>
                        }
                    </div>
                </div>

                @* Right side: Quick actions *@
                <div class="focus-quick-actions">
                    <div class="quick-action-card">
                        <h6>Free Focus</h6>
                        <p class="text-muted small">Work without a specific task</p>
                        <button class="btn btn-outline-primary w-100" @onclick="StartFreeSession">
                            <span class="oi oi-media-play me-2"></span>Start Session
                        </button>
                    </div>

                    @if (_recentTasks.Any())
                    {
                        <div class="recent-tasks-card">
                            <h6>Recent Tasks</h6>
                            @foreach (var task in _recentTasks.Take(3))
                            {
                                <button class="recent-task-btn" @onclick="() => SelectTask(task)">
                                    <PriorityIndicator Priority="@task.Priority" />
                                    <span>@TruncateText(task.Title, 30)</span>
                                </button>
                            }
                        </div>
                    }

                    @if (_state.SessionsCompleted > 0)
                    {
                        <div class="stats-card">
                            <h6>Today's Progress</h6>
                            <div class="stat-value">@_state.SessionsCompleted</div>
                            <div class="stat-label">focus session@(_state.SessionsCompleted == 1 ? "" : "s")</div>
                        </div>
                    }
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="focus-timer-active">
            @* Current Task *@
            <div class="mb-4">
                <span class="badge @(_state.IsBreak ? "bg-success" : "bg-primary") fs-6 px-3 py-2">
                    @(_state.IsBreak ? "Break Time" : _state.TaskTitle)
                </span>
            </div>

            @* Timer Display *@
            <div class="timer-display mb-4">
                <div class="timer-digits @(_state.IsBreak ? "text-success" : "")">
                    @FormatTime(_state.RemainingSeconds)
                </div>
                <div class="timer-label text-muted">
                    @if (_state.IsBreak)
                    {
                        <span class="text-success">Break Time!</span>
                    }
                    else if (_state.IsRunning)
                    {
                        <span>Focus...</span>
                    }
                    else if (_state.RemainingSeconds == _state.FocusMinutes * 60)
                    {
                        <span>Ready to start</span>
                    }
                    else
                    {
                        <span>Paused</span>
                    }
                </div>
            </div>

            @* Progress Ring *@
            <div class="progress-container mb-4">
                <svg class="progress-ring" viewBox="0 0 120 120">
                    <circle class="progress-ring-bg" cx="60" cy="60" r="54" />
                    <circle class="progress-ring-fill @(_state.IsBreak ? "break" : "")"
                            cx="60" cy="60" r="54"
                            stroke-dasharray="@(2 * Math.PI * 54)"
                            stroke-dashoffset="@GetProgressOffset()" />
                </svg>
            </div>

            @* Controls *@
            <div class="d-flex justify-content-center gap-3 mb-4">
                @if (!_state.IsRunning)
                {
                    <button class="btn btn-success btn-lg" @onclick="StartTimer">
                        <span class="oi oi-media-play me-1"></span> Start
                    </button>
                }
                else
                {
                    <button class="btn btn-warning btn-lg" @onclick="PauseTimer">
                        <span class="oi oi-media-pause me-1"></span> Pause
                    </button>
                }
                <button class="btn btn-outline-secondary btn-lg" @onclick="ResetTimer">
                    <span class="oi oi-reload me-1"></span> Reset
                </button>
                <button class="btn btn-outline-info btn-lg" @onclick="OpenMiniWindow" title="Open mini window">
                    <span class="oi oi-external-link me-1"></span> Mini
                </button>
            </div>

            @* Extension Controls - show when timer is running or paused with time *@
            @if (!_state.IsBreak && (_state.IsRunning || _state.RemainingSeconds < _state.TotalSeconds))
            {
                <div class="extension-controls mb-4">
                    <div class="d-flex justify-content-center align-items-center gap-2">
                        <span class="text-muted small">Need more time?</span>
                        <div class="btn-group btn-group-sm">
                            <button class="btn btn-outline-success" @onclick="() => ExtendTimer(5)" title="Add 5 minutes">
                                <span class="oi oi-plus me-1"></span>5m
                            </button>
                            <button class="btn btn-outline-success" @onclick="() => ExtendTimer(10)" title="Add 10 minutes">
                                +10m
                            </button>
                            <button class="btn btn-outline-success" @onclick="() => ExtendTimer(15)" title="Add 15 minutes">
                                +15m
                            </button>
                        </div>
                    </div>
                    @if (_state.ExtensionCount > 0)
                    {
                        <div class="text-center mt-2">
                            <small class="text-muted">
                                <span class="oi oi-clock me-1"></span>
                                Extended @_state.ExtensionCount time@(_state.ExtensionCount > 1 ? "s" : "") (+@_state.TotalExtensionMinutes min)
                            </small>
                        </div>
                    }
                </div>
            }

            @* Elapsed Time Display *@
            @if (!_state.IsBreak && _state.ElapsedSeconds > 0)
            {
                <div class="elapsed-time-display mb-3">
                    <div class="d-flex justify-content-center gap-4 small">
                        <div class="text-center">
                            <div class="text-muted">Elapsed</div>
                            <div class="fw-bold text-primary">@FormatTime(_state.ElapsedSeconds)</div>
                        </div>
                        @if (_state.OriginalEstimatedMinutes > 0)
                        {
                            <div class="text-center">
                                <div class="text-muted">Estimated</div>
                                <div class="fw-bold">@(_state.OriginalEstimatedMinutes)m</div>
                            </div>
                            <div class="text-center">
                                <div class="text-muted">Actual vs Est</div>
                                @{
                                    var elapsedMinutes = _state.ElapsedSeconds / 60.0;
                                    var ratio = elapsedMinutes / _state.OriginalEstimatedMinutes;
                                    var diffClass = ratio <= 1.0 ? "text-success" : ratio <= 1.25 ? "text-warning" : "text-danger";
                                }
                                <div class="fw-bold @diffClass">@((ratio * 100).ToString("F0"))%</div>
                            </div>
                        }
                    </div>
                </div>
            }

            @* Session Intention *@
            @if (!_state.IsRunning && !_state.IsBreak)
            {
                <div class="intention-section mb-4">
                    <div class="input-group">
                        <span class="input-group-text bg-transparent">
                            <span class="oi oi-target text-primary"></span>
                        </span>
                        <input type="text"
                               class="form-control"
                               placeholder="What's your intention for this session? (optional)"
                               @bind="_sessionIntention" />
                    </div>
                    <div class="form-text text-center mt-1">
                        Setting an intention helps maintain focus
                    </div>
                </div>
            }

            @* Show current intention while running *@
            @if (_state.IsRunning && !string.IsNullOrWhiteSpace(_sessionIntention))
            {
                <div class="current-intention mb-3">
                    <small class="text-muted">Intention:</small>
                    <div class="intention-text">"@_sessionIntention"</div>
                </div>
            }

            @* Session Settings *@
            <div class="mb-4">
                <div class="btn-group" role="group">
                    <button class="btn btn-sm @(_state.FocusMinutes == 15 ? "btn-primary" : "btn-outline-primary")"
                            @onclick="() => SetDuration(15)" disabled="@_state.IsRunning">15 min</button>
                    <button class="btn btn-sm @(_state.FocusMinutes == 25 ? "btn-primary" : "btn-outline-primary")"
                            @onclick="() => SetDuration(25)" disabled="@_state.IsRunning">25 min</button>
                    <button class="btn btn-sm @(_state.FocusMinutes == 45 ? "btn-primary" : "btn-outline-primary")"
                            @onclick="() => SetDuration(45)" disabled="@_state.IsRunning">45 min</button>
                    <button class="btn btn-sm @(_state.FocusMinutes == 60 ? "btn-primary" : "btn-outline-primary")"
                            @onclick="() => SetDuration(60)" disabled="@_state.IsRunning">60 min</button>
                </div>
            </div>

            @* Quick Actions *@
            <div class="d-flex justify-content-center gap-2">
                @if (_state.TaskId.HasValue)
                {
                    <button class="btn btn-outline-success btn-sm" @onclick="CompleteTask">
                        <span class="oi oi-check me-1"></span> Mark Complete
                    </button>
                }
                <button class="btn btn-outline-secondary btn-sm" @onclick="ChangeTask">
                    <span class="oi oi-arrow-left me-1"></span> Change Task
                </button>
            </div>

            @* Sessions completed today *@
            @if (_state.SessionsCompleted > 0)
            {
                <div class="mt-4 text-muted">
                    <small>
                        <span class="oi oi-star me-1"></span>
                        @_state.SessionsCompleted focus session@(_state.SessionsCompleted == 1 ? "" : "s") today
                    </small>
                </div>
            }

            @* Task Queue Section *@
            @if (_state.TaskQueue.Any())
            {
                <div class="task-queue-section mt-4">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <h6 class="mb-0">
                            <span class="oi oi-list me-1"></span>Up Next (@_state.TaskQueue.Count)
                        </h6>
                        <button class="btn btn-sm btn-link text-muted p-0" @onclick="ClearQueue" title="Clear queue">
                            <span class="oi oi-trash"></span>
                        </button>
                    </div>
                    <div class="queue-list">
                        @foreach (var (task, index) in _state.TaskQueue.Select((t, i) => (t, i)))
                        {
                            <div class="queue-item @(index == 0 ? "next-up" : "")">
                                <div class="queue-item-info">
                                    @if (index == 0)
                                    {
                                        <span class="badge bg-primary me-1">Next</span>
                                    }
                                    <span class="queue-title">@task.Title</span>
                                    @if (task.EstimatedMinutes.HasValue)
                                    {
                                        <span class="text-muted small">(@task.EstimatedMinutes min)</span>
                                    }
                                </div>
                                <div class="queue-item-actions">
                                    @if (index > 0)
                                    {
                                        <button class="btn btn-sm btn-link p-0" @onclick="() => MoveQueueItem(task.TaskId, index - 1)" title="Move up">
                                            <span class="oi oi-arrow-top"></span>
                                        </button>
                                    }
                                    <button class="btn btn-sm btn-link text-danger p-0" @onclick="() => RemoveFromQueue(task.TaskId)" title="Remove">
                                        <span class="oi oi-x"></span>
                                    </button>
                                </div>
                            </div>
                        }
                    </div>
                    <button class="btn btn-outline-primary btn-sm w-100 mt-2" @onclick="StartNextTask">
                        <span class="oi oi-media-step-forward me-1"></span>Start Next Task
                    </button>
                </div>
            }
        </div>
    }
</div>


@page "/projects"
@using SelfOrganizer.Core.Models
@using SelfOrganizer.App.Services
@using SelfOrganizer.App.Components.Shared
@inject SelfOrganizer.Core.Interfaces.IProjectService ProjectService
@inject SelfOrganizer.Core.Interfaces.ITaskService TaskService
@inject IExportService ExportService
@inject IDataChangeNotificationService DataChangeNotification

<div class="d-flex justify-content-between align-items-center mb-4">
    <h3>
        <span class="oi oi-folder me-2"></span>Projects
    </h3>
    <div class="d-flex gap-2">
        <ExportButton
            EntityName="projects"
            OnExportCsv="HandleExportCsv"
            OnExportJson="HandleExportJson"
            OnDownloadTemplate="HandleDownloadTemplate"
            IsDisabled="@(!_filteredProjects.Any())"
            Size="small" />
        <button class="btn btn-primary" @onclick="ShowAddModal">
            <span class="oi oi-plus me-1"></span> New Project
        </button>
    </div>
</div>

<div class="mb-3">
    <div class="btn-group" role="group">
        <button class="btn @(_statusFilter == "active" ? "btn-primary" : "btn-outline-primary")" @onclick="@(() => FilterByStatus("active"))">Active</button>
        <button class="btn @(_statusFilter == "onhold" ? "btn-primary" : "btn-outline-primary")" @onclick="@(() => FilterByStatus("onhold"))">On Hold</button>
        <button class="btn @(_statusFilter == "someday" ? "btn-primary" : "btn-outline-primary")" @onclick="@(() => FilterByStatus("someday"))">Someday</button>
        <button class="btn @(_statusFilter == "completed" ? "btn-primary" : "btn-outline-primary")" @onclick="@(() => FilterByStatus("completed"))">Completed</button>
        <button class="btn @(_statusFilter == "all" ? "btn-primary" : "btn-outline-primary")" @onclick="@(() => FilterByStatus("all"))">All</button>
    </div>
</div>

@if (_stalledProjects.Any())
{
    <div class="alert alert-warning mb-4">
        <span class="oi oi-warning me-2"></span>
        <strong>@_stalledProjects.Count project(s) have no next action defined!</strong>
        Every active project should have at least one next action.
    </div>
}

@if (_isLoading)
{
    <div class="text-center py-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
}
else if (!_filteredProjects.Any())
{
    <div class="text-center py-5">
        <h5 class="text-muted">No projects found</h5>
        <p class="text-muted">Create a new project to get started.</p>
    </div>
}
else
{
    <div class="row">
        @foreach (var project in _filteredProjects.OrderBy(p => p.Priority).ThenBy(p => p.DueDate))
        {
            var progress = _projectProgress.GetValueOrDefault(project.Id, (0, 0));
            var isStalled = _stalledProjects.Contains(project.Id);

            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100 @(isStalled ? "border-warning" : "")">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <div>
                            <SelfOrganizer.App.Components.Shared.PriorityIndicator Priority="@project.Priority" />
                            <a href="/projects/@project.Id" class="text-decoration-none">@project.Name</a>
                        </div>
                        <span class="badge bg-secondary">@project.Status</span>
                    </div>
                    <div class="card-body">
                        @if (!string.IsNullOrEmpty(project.DesiredOutcome))
                        {
                            <p class="card-text small text-muted">@project.DesiredOutcome</p>
                        }
                        @if (isStalled)
                        {
                            <div class="alert alert-warning py-1 px-2 small mb-2">
                                <span class="oi oi-warning"></span> No next action
                            </div>
                        }
                        @if (progress.Item2 > 0)
                        {
                            var percent = (int)((double)progress.Item1 / progress.Item2 * 100);
                            <div class="progress mb-2" style="height: 8px;">
                                <div class="progress-bar" role="progressbar" style="width: @percent%"></div>
                            </div>
                            <small class="text-muted">@progress.Item1 / @progress.Item2 tasks completed</small>
                        }
                        @if (project.Tags.Any())
                        {
                            <div class="mt-2">
                                @foreach (var tag in project.Tags.Take(3))
                                {
                                    <a href="/tags/@tag" class="badge bg-primary text-decoration-none me-1">#@tag</a>
                                }
                                @if (project.Tags.Count > 3)
                                {
                                    <span class="badge bg-secondary">+@(project.Tags.Count - 3)</span>
                                }
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(project.Url))
                        {
                            <div class="mt-2">
                                <a href="@project.Url" target="_blank" class="small text-decoration-none" @onclick:stopPropagation="true">
                                    <span class="oi oi-external-link me-1"></span>External Link
                                </a>
                            </div>
                        }
                    </div>
                    <div class="card-footer bg-transparent">
                        <div class="d-flex justify-content-between align-items-center">
                            @if (project.DueDate.HasValue)
                            {
                                <small class="@(project.DueDate.Value < DateTime.UtcNow ? "text-danger" : "text-muted")">
                                    <span class="oi oi-calendar"></span> @project.DueDate.Value.ToString("MMM d")
                                </small>
                            }
                            else
                            {
                                <span></span>
                            }
                            <div>
                                <button class="btn btn-sm btn-outline-primary" @onclick="() => EditProject(project)">
                                    <span class="oi oi-pencil"></span>
                                </button>
                                <button class="btn btn-sm btn-outline-danger" @onclick="() => DeleteProject(project)">
                                    <span class="oi oi-trash"></span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}

@* Add/Edit Project Modal *@
<SelfOrganizer.App.Components.Shared.Modal Title="@(_editingProject == null ? "New Project" : "Edit Project")" IsVisible="@_showModal" OnClose="CloseModal" Size="modal-lg">
    <ChildContent>
        <div class="mb-3">
            <label class="form-label">Name</label>
            <input type="text" class="form-control" @bind="_projectName" />
        </div>
        <div class="mb-3">
            <label class="form-label">Desired Outcome</label>
            <textarea class="form-control" @bind="_projectOutcome" rows="2" placeholder="What does 'done' look like?"></textarea>
        </div>
        <div class="mb-3">
            <label class="form-label">Description</label>
            <textarea class="form-control" @bind="_projectDescription" rows="3"></textarea>
        </div>
        <div class="row mb-3">
            <div class="col-md-4">
                <label class="form-label">Priority</label>
                <select class="form-select" @bind="_projectPriority">
                    <option value="1">High</option>
                    <option value="2">Normal</option>
                    <option value="3">Low</option>
                </select>
            </div>
            <div class="col-md-4">
                <label class="form-label">Status</label>
                <select class="form-select" @bind="_projectStatus">
                    <option value="@ProjectStatus.Active">Active</option>
                    <option value="@ProjectStatus.OnHold">On Hold</option>
                    <option value="@ProjectStatus.SomedayMaybe">Someday/Maybe</option>
                </select>
            </div>
            <div class="col-md-4">
                <label class="form-label">Due Date</label>
                <input type="date" class="form-control" @bind="_projectDueDate" />
            </div>
        </div>
        <div class="mb-3">
            <label class="form-label">Tags</label>
            <input type="text" class="form-control" @bind="_projectTags" placeholder="Use #hashtags separated by spaces (e.g., #work #client #urgent)" />
            <small class="text-muted">Tags help organize and link related items across tasks, events, and projects.</small>
        </div>
        <div class="mb-3">
            <label class="form-label">External URL</label>
            <input type="url" class="form-control" @bind="_projectUrl" placeholder="https://..." />
            <small class="text-muted">Link to project documentation, repository, or external resource.</small>
        </div>
    </ChildContent>
    <Footer>
        <button class="btn btn-secondary" @onclick="CloseModal">Cancel</button>
        <button class="btn btn-primary" @onclick="SaveProject" disabled="@string.IsNullOrWhiteSpace(_projectName)">
            @(_editingProject == null ? "Create" : "Save")
        </button>
    </Footer>
</SelfOrganizer.App.Components.Shared.Modal>

<SelfOrganizer.App.Components.Shared.ConfirmDialog
    Title="Delete Project"
    Message="Are you sure you want to delete this project? Tasks in the project will not be deleted."
    IsVisible="@_showDeleteConfirm"
    OnConfirm="ConfirmDelete"
    OnCancel="() => _showDeleteConfirm = false" />

@code {
    private List<Project> _projects = new();
    private List<Project> _filteredProjects = new();
    private HashSet<Guid> _stalledProjects = new();
    private Dictionary<Guid, (int completed, int total)> _projectProgress = new();
    private bool _isLoading = true;
    private string _statusFilter = "active";
    private bool _showModal = false;
    private bool _showDeleteConfirm = false;
    private Project? _editingProject;
    private Project? _deletingProject;

    // Form fields
    private string _projectName = string.Empty;
    private string _projectOutcome = string.Empty;
    private string _projectDescription = string.Empty;
    private int _projectPriority = 2;
    private ProjectStatus _projectStatus = ProjectStatus.Active;
    private DateTime? _projectDueDate;
    private string _projectTags = string.Empty;
    private string? _projectUrl;

    protected override async Task OnInitializedAsync()
    {
        await LoadProjects();
    }

    private async Task LoadProjects()
    {
        _isLoading = true;
        try
        {
            _projects = (await ProjectService.GetAllAsync())
                .Where(p => p.Status != ProjectStatus.Deleted)
                .ToList();

            // Load stalled projects and progress in parallel (both now use efficient batch operations)
            var stalledTask = ProjectService.GetStalledProjectsAsync();
            var progressTask = ProjectService.GetProgressBatchAsync(_projects.Select(p => p.Id));

            await Task.WhenAll(stalledTask, progressTask);

            var stalledList = await stalledTask;
            _stalledProjects = stalledList.Select(p => p.Id).ToHashSet();

            // Use batch-loaded progress data
            _projectProgress = await progressTask;

            ApplyFilter();
        }
        finally
        {
            _isLoading = false;
        }
    }

    private void FilterByStatus(string status)
    {
        _statusFilter = status;
        ApplyFilter();
    }

    private void ApplyFilter()
    {
        _filteredProjects = _statusFilter switch
        {
            "active" => _projects.Where(p => p.Status == ProjectStatus.Active).ToList(),
            "onhold" => _projects.Where(p => p.Status == ProjectStatus.OnHold).ToList(),
            "someday" => _projects.Where(p => p.Status == ProjectStatus.SomedayMaybe).ToList(),
            "completed" => _projects.Where(p => p.Status == ProjectStatus.Completed).ToList(),
            _ => _projects.ToList()
        };
    }

    private void ShowAddModal()
    {
        _editingProject = null;
        _projectName = string.Empty;
        _projectOutcome = string.Empty;
        _projectDescription = string.Empty;
        _projectPriority = 2;
        _projectStatus = ProjectStatus.Active;
        _projectDueDate = null;
        _projectTags = string.Empty;
        _projectUrl = null;
        _showModal = true;
    }

    private void EditProject(Project project)
    {
        _editingProject = project;
        _projectName = project.Name;
        _projectOutcome = project.DesiredOutcome ?? string.Empty;
        _projectDescription = project.Description ?? string.Empty;
        _projectPriority = project.Priority;
        _projectStatus = project.Status;
        _projectDueDate = project.DueDate;
        _projectTags = project.Tags.Any() ? string.Join(" ", project.Tags.Select(t => $"#{t}")) : string.Empty;
        _projectUrl = project.Url;
        _showModal = true;
    }

    private void CloseModal()
    {
        _showModal = false;
        _editingProject = null;
    }

    private async Task SaveProject()
    {
        if (string.IsNullOrWhiteSpace(_projectName)) return;

        // Parse tags from input
        var tags = SelfOrganizer.Core.Services.TagParsingService.ExtractTags(_projectTags);

        if (_editingProject == null)
        {
            var project = new Project
            {
                Name = _projectName,
                DesiredOutcome = _projectOutcome,
                Description = _projectDescription,
                Priority = _projectPriority,
                Status = _projectStatus,
                DueDate = _projectDueDate,
                Tags = tags,
                Url = string.IsNullOrWhiteSpace(_projectUrl) ? null : _projectUrl
            };
            await ProjectService.CreateAsync(project);
        }
        else
        {
            _editingProject.Name = _projectName;
            _editingProject.DesiredOutcome = _projectOutcome;
            _editingProject.Description = _projectDescription;
            _editingProject.Priority = _projectPriority;
            _editingProject.Status = _projectStatus;
            _editingProject.DueDate = _projectDueDate;
            _editingProject.Tags = tags;
            _editingProject.Url = string.IsNullOrWhiteSpace(_projectUrl) ? null : _projectUrl;
            await ProjectService.UpdateAsync(_editingProject);
        }

        CloseModal();
        DataChangeNotification.NotifyDataChanged();
        await LoadProjects();
    }

    private void DeleteProject(Project project)
    {
        _deletingProject = project;
        _showDeleteConfirm = true;
    }

    private async Task ConfirmDelete()
    {
        if (_deletingProject != null)
        {
            await ProjectService.DeleteAsync(_deletingProject.Id);
            _deletingProject = null;
        }
        _showDeleteConfirm = false;
        DataChangeNotification.NotifyDataChanged();
        await LoadProjects();
    }

    // Export methods
    private static readonly string[] ExportColumns = new[]
    {
        "Name", "Description", "DesiredOutcome", "Status", "Priority", "DueDate", "Category"
    };

    private async Task HandleExportCsv(ExportEventArgs args)
    {
        var result = await ExportService.ExportAndDownloadCsvAsync(_filteredProjects, "projects", ExportColumns);
        if (result.Success)
            args.SetSuccess(result.ItemCount, $"Exported {result.ItemCount} projects");
        else
            args.SetError(result.ErrorMessage ?? "Export failed");
    }

    private async Task HandleExportJson(ExportEventArgs args)
    {
        var result = await ExportService.ExportAndDownloadJsonAsync(_filteredProjects, "projects");
        if (result.Success)
            args.SetSuccess(result.ItemCount, $"Exported {result.ItemCount} projects");
        else
            args.SetError(result.ErrorMessage ?? "Export failed");
    }

    private async Task HandleDownloadTemplate(ExportEventArgs args)
    {
        var result = await ExportService.DownloadTemplateAsync<Project>("projects", ExportColumns);
        if (result.Success)
            args.SetSuccess(0, "Template downloaded");
        else
            args.SetError(result.ErrorMessage ?? "Download failed");
    }
}
